table(class="table is-striped is-hoverable is-bordered")
  tr
    th Name
    th Type
    th HP
    th Att
    th Def
    th SpA
    th SpD
    th Spe
    th Ability
    th Moves
  each pokemon in pokemonList
    tr
      td #{pokemon.name}
      td !{pokemon.types.join("<br />")}
      td #{pokemon.hp}
      td #{pokemon.att}
      td #{pokemon.def}
      td #{pokemon.spa}
      td #{pokemon.spd}
      td #{pokemon.spe}
      td !{pokemon.abilities.map(a => a.name).join("<br />")}
      td #{pokemon.moves.map(m => m.name).join(", ")}